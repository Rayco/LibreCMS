<% title "Edit Screenshot" %>

<div class="app_details">

<h3>Editing <%= @application.name %> Screenshot</h3>

<%= render :partial => @screenshot, :locals => { :button_name => "Update" } %>

<p>
  <%= link_to "Show", application_screenshot_path(@tags, @application, @screenshot) %> |
  <%= link_to "View All", application_screenshots_path(@tags, @application) %>
</p>

</div>
