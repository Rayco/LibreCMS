<%= error_messages_for :screenshot %>

<% form_for ([@application, @screenshot]), :url => application_screenshot_path(@tags, @application, screenshot), :html => { :multipart => true } do |f| %>
  
  <p>
    <span class="asterisk">* </span><b>Screenshot Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <span class="asterisk">* </span><b>Image File</b><br />
    <%= f.file_field :image %>
  </p>
  
  <p><span class="asterisk">* </span><b>Required field</b></p>

  <p><%= f.submit button_name %>  &nbsp; <input type="button" onclick="history.go(-1); return false;" value="Back" /></p>

<% end %>
