<h1>Listing softwares</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Logo</th>
    <th>Website</th>
    <th>Description</th>
  </tr>

<% for software in @softwares %>
  <tr>
    <td><%=h software.name %></td>
    <td><%=h software.logo %></td>
    <td><%=h software.website %></td>
    <td><%=h software.description %></td>
    <td><%= link_to 'Show', software %></td>
    <td><%= link_to 'Edit', edit_software_path(software) %></td>
    <td><%= link_to 'Destroy', software, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

