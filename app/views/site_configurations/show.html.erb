<div class="app_details">

<h3>Configuration <%=h @site_configuration.name %></h3>

<p>
  <b>Site ID:</b>
  <%=h @site_configuration.id %>
</p>

<p>
  <b>Domain:</b>
  <%= link_to @site_configuration.website, 'http://' + @site_configuration.website %>
</p>

<p>
  <b>Header:</b>
  <%=h @site_configuration.header %>
</p>

<p>
  <b>Web ISO:</b>
  <%= link_to @site_configuration.webiso, @site_configuration.webiso %>
</p>

<p>
  <b>Tracking Code:</b>
  <%=h @site_configuration.code %>
</p>

<p>
  <input type="button" onclick="parent.location='/site_configurations/<%=@site_configuration.id%>/edit'" value="Edit" /> &nbsp; 
  <input type="button" onclick="history.go(-1); return false;" value="Back" />
</p>

</div>
