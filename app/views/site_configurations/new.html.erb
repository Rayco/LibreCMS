<div class="app_details">

<h3>New Site Configuration</h3>

<% form_for(@site_configuration) do |f| %>
  <%= f.error_messages %>

  <p>
    <span class="asterisk">* </span><b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Domain</b><br /> 
    <%= f.text_field :website %>
  </p>

  <p>
    <b>Header</b><br />
    <%= f.text_field :header %>
  </p>

  <p>
    <b>Web ISO</b><br />
    <%= f.text_field :webiso %>
  </p>

  <p>
    <b>Tracking Code (Google Analytics)</b><br />
    <%= f.text_area :code %>
  </p>

  <p><span class="asterisk">* </span><b>Required field</b></p>

  <p>
    <%= f.submit "Create" %>
  </p>

<% end %>

<%= link_to 'Back', site_configurations_path %>

</div>
