<%= error_messages_for :application %>

<% form_for ([@application]), :url => application_path(@tags, application), :html => { :multipart => true } do |f| %>
  <p>
  	<b>Tags:</b>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
  	<b>Recomendada por</b><br/>
	<%= f.text_field :user_recommend %>
  </p>

  <p>
    <b>Logo</b><br />
	<%= f.file_field :logo %>
  </p>

  <p>
    <b>Website</b><br />
    <%= f.text_field :website %>
  </p>
  
  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit button_name %>
  </p>
<% end %>
