<% form_for ([@category, @application]), :url => [@category, application], :html => { :multipart => true } do |f| %>
  <p>
  	<b>Category:</b>
  	<%=h @category.name %>
  </p>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
  	<b>Versi&oacute;n</b><br />
	<%= f.text_field :version %>
  </p>
  
  <p>
  	<b>Recomendada por</b><br/>
	<%= f.text_field :user_recommend %>
  </p>

  <p>
    <b>Logo</b><br />
	<%= f.file_field :logo %>
  </p>

  <p>
    <b>Website</b><br />
    <%= f.text_field :website %>
  </p>
  
  <p>
  	<b>Installer</b><br />
	<%= f.file_field :installer %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit button_name %>
  </p>
<% end %>
