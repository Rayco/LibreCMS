<p>
  <b>Name:</b>
  <%=h @application.name %>
</p>

<p>
  <b>Logo:</b>
  <%=h @application.logo %>
</p>

<p>
  <b>Website:</b>
  <%=h @application.website %>
</p>

<p>
  <b>Description:</b>
  <%=h @application.description %>
</p>

<% unless @application.resources.empty? %>
	<h3>Resources</h3>
	<% @application.resources.each do |resource| %>
	<p>
		<%= link_to resource.name, [@application, resource] %>
	</p>
	<% end %>
<% end %>

<%= link_to 'Resources', application_resources_path(@application) %> |
<%= link_to 'Edit', edit_application_path(@application) %> |
<%= link_to 'Back', applications_path %>