<p>
  <b>Category_id:</b>
  <%=h @application.category_id %>
</p>
	
<p>
  <b>Name:</b>
  <%=h @application.name %>
</p>

<p>
  <b>Logo:</b>
  <%=h @application.logo %>
</p>

<p>
  <b>Website:</b>
  <%=h @application.website %>
</p>

<p>
  <b>Description:</b>
  <%=h @application.description %>
</p>

<% unless @application.resources.empty? %>
	<h3>Resources</h3>
	<% @application.resources.each do |resource| %>
	<p>
		<%= link_to resource.name, [@category, @application, resource] %>
	</p>
	<% end %>
<% end %>

<%= link_to 'Resources', category_application_resources_path([@category, @application]) %> |
<%= link_to 'Edit', [:edit, @category, @application] %> |
<%= link_to 'Back', category_applications_path(@category) %>