<%= stylesheet_link_tag 'applications' %>

<h4><%=h @category.name + ' -> ' + @application.name %></h4>

<div class="app_details">
	<%= image_tag @application.logo.url(:resized), :class => "logos" %>
	<p><b>Nombre:</b> <%=h @application.name %></p>
	<p><b>Categor&iacute;a:</b> <%=h @application.category.name %></p>
	<p><b>Website:</b> <%= link_to @application.website, @application.website %></p>
	<p><b>Descripci&oacute;n:</b> <%=h @application.description %></p>
</div>

<% if logged_in? and current_user.has_role?('administrator') %>
	<%= link_to 'Edit', [:edit, @category, @application] %>
<% end %>

