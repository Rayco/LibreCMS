<ul id="categories_index" class="cleaning-box">
<% for category in @categories %>
  <li>
    <% url_param = Array.new(@tags) << category %>
      <% if category.children_in_site(@site_config).empty? %>
        <%= link_to (image_tag category.icon.url(:big)), applications_path(url_param) %><br />
	<% if !category.publicname.nil? and !category.publicname.empty? %>
	  <%= link_to category.publicname, applications_path(url_param) %>
	<% else %>
	  <%= link_to category.name, applications_path(url_param) %>
	<% end %>
      <% else %> 
        <%= link_to (image_tag category.icon.url(:big)), categories_path(url_param) %><br />
	<% if !category.publicname.nil? and !category.publicname.empty? %>
	  <%= link_to category.publicname, categories_path(url_param) %><br /><br />
	<% else %>
	  <%= link_to category.name, categories_path(url_param) %><br /><br />
	<% end %>
      <% end %>
      <% if logged_in? and current_user.has_role?('administrator') %>
        <%= link_to 'Edit', edit_category_path(category) %> | 
    	<%= link_to 'Destroy', category_path(category), :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
  </li>
<% end %>
</ul>

<br />

<% if logged_in? and current_user.has_role?('administrator') %>
  <%= link_to 'New category', new_category_path %>
<% end %>

