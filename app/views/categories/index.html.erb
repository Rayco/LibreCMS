<h4>Listado de Categorias</h4>

<ul id="categories_index" class="cleaning-box">
<% for category in @categories %>
	<li>
		<%= link_to (image_tag category.icon.url(:big)), category_applications_path(category) %><br />
    	<%= link_to category.name, category_applications_path(category) %>
	</li>
    <!-- <td>< %= link_to 'Edit', edit_category_path(category) % ></td>
    <td>< %= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete % ></td> -->
<% end %>
</ul>

<br />

<% if logged_in? and current_user.has_role?('administrator') %>
	<%= link_to 'New category', new_category_path %>
<% end %>
  
