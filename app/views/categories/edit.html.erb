<div class="app_details">

<h3>Editing Category</h3>

<% form_for ([@category]), :url => {:action => "update"}, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <b>Name</b><br />
    <%= f.text_field :publicname %>
  </p>

  <p>
    <span class="asterisk">* </span><b>Permanent Link</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Icon</b><br />
    <%= f.file_field :icon %>
  </p>

  <p>
    <b>Parent Categories (Must write the Permanent Link, not the Category Name, separated by commas)</b><br />
    <%= f.text_field :parents_names %>
  </p>

  <p><span class="asterisk">* </span><b>Required field</b></p>

  <p>
    <%= f.submit "Update" %> &nbsp; <input type="button" onclick="history.go(-1); return false;" value="Back" />
  </p>

<% end %>

</div>
