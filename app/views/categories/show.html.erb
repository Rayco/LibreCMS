<p>
  <b>Name:</b>
  <%=h @category.name %>
</p>

<% unless @category.applications.empty? %>
	<h3>Applications</h3>
	<% @category.applications.each do |application| %>
	<p>
		<%= link_to application.name, [@category, application] %>
	</p>
	<% end %>
<% end %>

<%= link_to 'Application', category_applications_path(@category) %> |
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
