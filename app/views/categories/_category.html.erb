<%= error_messages_for :category %>

<% form_for ([@category]), :url => [category], :html => { :multipart => true } do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
  	<b>Icono</b><br />
  	<%= f.file_field :icon %>
  </p>
  
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>