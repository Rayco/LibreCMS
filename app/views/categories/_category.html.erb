<%= error_messages_for :category %>

<% form_for ([@category]), :url => category_path(@category), :html => { :multipart => true } do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Public Name</b><br />
    <%= f.text_field :publicname %>
  </p>
  
  <p>
    <b>Icono</b><br />
    <%= f.file_field :icon %>
  </p>

  <p>
    <b>Categor√≠as padre (Debe poner el Name, no el PublicName, separados por comas)</b><br />
    <%= f.text_field :parents_names %>
  </p>
  
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>
