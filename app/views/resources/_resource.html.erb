<%= error_messages_for :resource %>

<% form_for ([@application, @resource]), :url => application_resource_path(@tags, @application, resource), :html => { :multipart => true } do |f| %>
  
  <p>
    <span class="asterisk">* </span><b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>File Name</b><br />
    <%= f.file_field :resource %>
  </p>

  <p>
    <b>WebSite</b><br />
    <%= f.text_field :website%>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p><span class="asterisk">* </span><b>Required field</b></p>

  <p>
    <%= f.submit button_name %> &nbsp; <input type="button" onclick="history.go(-1); return false;" value="Back" />
  </p>
<% end %>
