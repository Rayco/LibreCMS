<h1>Listing resources for <%=h @application.name %> in <%=h @category.name %></h1>

<table>
  <tr>
    <th>Application</th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for resource in @resources %>
  <tr>
  	<td><%=h resource.application_id %></td>
    <td><%=h resource.name %></td>
    <td><%=h resource.description %></td>
    <td><%= link_to 'Show', [@application, resource] %></td>
    <td><%= link_to 'Edit', [:edit, @application, resource] %></td>
    <td><%= link_to 'Destroy', [@application, resource], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New resource', new_application_resource_path(@application) %>
