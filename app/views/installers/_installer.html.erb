<%= error_messages_for :installer %>
<% form_for ([@application, @installer]), :url => application_installer_path(@tags, @application, installer), :html => { :multipart => true } do |f| %>

  <p>
    <span class="asterisk">* </span><b>Platforms and Architecture: </b>
    <select name="installer[platform_list]">
      <option selected value="Windows, 32bits"> <%= "Windows 32 Bits" %> </option>
      <option selected value="Windows, 64bits"> <%= "Windows 64 Bits" %> </option>
      <option selected value="Linux"> <%= "GNU/Linux" %> </option>
      <option selected value="Mac"> <%= "Mac" %> </option>
      <option selected value="Multiplatform"> <%= "Multiplatform" %> </option>
    </select>
  </p>

  <p>
    </span><b>Version</b><br />
    <%= f.text_field :version %>
  </p>

  <p>
    <span class="asterisk">* </span><b>File Name</b><br />
    <%= f.file_field :installer %>
  </p>

  <p><span class="asterisk">* </span><b>Required field</b></p>

  <p>
    <%= f.submit button_name %> &nbsp; <input type="button" onclick="history.go(-1); return false;" value="Back" />
  </p>
<% end %>
