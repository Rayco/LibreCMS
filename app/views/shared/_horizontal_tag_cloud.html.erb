<div class="horizontal-cloud" id="tagcloud">
  <% tag_cloud @cloud, @css_classes  do |tag, css_class| %>
    <% if Category.find_by_name(tag.name) and !Category.find_by_name(tag.name).publicname.nil? and !Category.find_by_name(tag.name).publicname.empty? %>
      <%= link_to Category.find_by_name(tag.name).publicname, applications_path(String.new(tag.name).to_url), :class => css_class %>
    <% else %>
      <%= link_to tag, applications_path(String.new(tag.name).to_url), :class => css_class %>
    <% end %>
  <% end %>
</div>
