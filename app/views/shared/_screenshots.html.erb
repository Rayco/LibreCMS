<%= javascript_include_tag :defaults, 'lightbox' %>
<% unless @screenshots.empty? %>
	<% @screenshots.each do |screenshot| %>
		<%= link_to image_tag(screenshot.image.url(:thumb),
					:alt => screenshot.name, :title => screenshot.name),
					screenshot.image.url, {:rel => "lightbox", :title => screenshot.name} %>
	<% end %>
	<%= will_paginate @screenshots %>
<% end %>