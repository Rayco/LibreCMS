<% if logged_in? %>
  <ul id="login_menu">
    <li>Logged in as:</li>
    <li><%= link_to h(current_user.login.capitalize), user_path(current_user) %></li>
  <% if current_user.has_role?('administrator') %>  
      <li><%= link_to 'Setup Menu', configurations_url %></li>
  <% end %>
    <li><%= link_to 'Log Out', logout_url %></li>
  </ul>
<% end %>
