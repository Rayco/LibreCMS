<div class="app_details">

<h3>Change Password</h3>

<% form_tag :action => "update" do %>
  
  <p>
    <span class="asterisk">* </span><b>Old Password</b><br />
    <%= password_field_tag 'old_password', @old_password, :size => 45 %>
  </p>
  
  <p>
    <span class="asterisk">* </span><b>New Password</b><br />
    <%= password_field_tag 'password', {}, :size => 45 %> <small>Between 4 and 40 characters</small>
  </p>

  <p>
    <span class="asterisk">* </span><b>Confirm New Password</b><br />
    <%= password_field_tag 'password_confirmation', {}, :size => 45 %>
  </p>
  
  <%= submit_tag 'Update' %>
<% end %>

</div>
